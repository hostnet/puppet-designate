---
- name: default
  description: Default pool
  attributes: {}

  ns_records:
<% @ns_records.sort.each do |priority, hostname| -%>
    - hostname: <%= hostname %>
      priority: <%= priority.to_s %>
<% end -%>

  nameservers:
<% @nameservers.each do |nameserver| -%>
    - host: <%= nameserver %>
      port: <%= @ns_port.to_s %>
<% end -%>

  targets:
<% @pdns4_hosts.each do |pdns4_host| -%>
    - type: pdns4
      description: PowerDNS4 DNS Server <%= pdns4_host %>

      masters:
<% @mdns_hosts.each do |mdns_host| -%>
        - host: <%= mdns_host %>
          port: <%= @mdns_port.to_s %>
<% end -%>

      options:
        host: <%= pdns4_host %>
        port: <%= @pdns4_port.to_s %>
        api_endpoint: <%= @api_endpoint %>
        api_token: <%= @api_token %>
  <%- if @tsigkey_name -%>
        tsigkey_name: <%= @tsigkey_name %>
  <%- end -%>
<% end -%>
